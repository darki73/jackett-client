{
    "compilerOptions": {
        "lib": ["es7", "dom"],
        "declaration": true,
        "esModuleInterop": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "allowJs": false,
        "resolveJsonModule": true,
        "noUnusedLocals": false
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}
